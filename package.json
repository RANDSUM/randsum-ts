{
  "name": "randsum",
  "description": "rand for the rest of us",
  "license": "MIT",
  "author": "Alex Jarvis",
  "homepage": "https://alxjrvs.github.io/randsum/",
  "repository": {
    "type": "git",
    "url": "https://github.com/alxjrvs/randsum.git"
  },
  "version": "1.4.2",
  "private": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p .",
    "docs": "typedoc --options ./typedoc.json -gitRevision $npm_package_version",
    "test": "jest",
    "test:ci": "jest --runInBand",
    "scan": "depcruise --config .dependency-cruiser.js src --ignore-known",
    "lint": "eslint . -c .eslintrc.json",
    "watch-build": "tsc -w -p .",
    "postinstall": "husky install",
    "prepublish": "yarn build",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "postversion": "git push --no-verify && git push --tags --no-verify"
  },
  "files": [
    "dist/**/*"
  ],
  "devDependencies": {
    "@types/jest": "^27.0.0",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "bundlewatch": "^0.3.2",
    "codecov": "^3.8.3",
    "dependency-cruiser": "^11.12.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-regexp": "^1.5.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unicorn": "^39.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^7.0.4",
    "jest": "^27.0.0",
    "lint-staged": "^12.1.3",
    "pinst": "^2.1.6",
    "prettier": "^2.5.1",
    "ts-jest": "^27.0.0",
    "typedoc": "^0.22.10",
    "typedoc-plugin-merge-modules": "^3.1.0",
    "typescript": "~4.5.4",
    "yarn": "^1.22.0"
  },
  "keywords": [
    "chance",
    "dice",
    "dice rolls",
    "rpg",
    "rpgs",
    "die",
    "die rolling",
    "rand",
    "rolling",
    "typescript"
  ],
  "engines": {
    "node": ">=6.2.2"
  },
  "lint-staged": {
    "./src/**": "yarn lint --cache --fix"
  },
  "bundlewatch": {
    "files": [
      {
        "path": "./dist/**/*.{ts,js}",
        "maxSize": "100kB"
      }
    ],
    "ci": {
      "trackBranches": [
        "main"
      ]
    }
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)$",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "rootDir": "src/"
  },
  "dependencies": {}
}
