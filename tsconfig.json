{
  "compilerOptions": {
    "paths": {
      "~models": [
        "./src/models/index.ts"
      ],
      "~patterns": [
        "./src/patterns.ts"
      ],
      "~guards": [
        "./src/guards.ts"
      ],
      "~src/*": [
        "./src/*"
      ]
    },
    "lib": [
      "ESNext"
    ],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "composite": true,
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "types": [
      "bun-types"
    ]
  }
}
